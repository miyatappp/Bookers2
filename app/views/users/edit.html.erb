<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <p>Name</p>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:""%>
        <p>Image</p>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        <p>Introduction</p>
        <%= f.text_field :introduction, autofocus: true, id:"inputName", placeholder:""%>
        <div class="text"> 
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>